  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "postcss-cli": "^7.1.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "concurrently": "^5.1.0",
    "node-sass": "^4.13.1",
    "purgecss": "^2.1.0",
    "tailwindcss": "^1.2.0",
    "vigilia": "^1.0.0"
  },
  "description": ""
}
