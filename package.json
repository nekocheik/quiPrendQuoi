{
  "name": "quiprendquoi",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:css; concurrently --kill-others-on-fail \"npm run sass\" \"nodemon app.js\"",
    "sass": "node-sass styles/style.scss public/style.css -w --output-style compressed",
    "watch": "node_modules/vigilia/bin/vigilia '**/*.js':'node app.js' 'styles/**/*.scss':'npm run sass'",
    "build:css": "postcss --config postcss.config.js styles/tailwind.css -o public/tailwind.css"
  },
